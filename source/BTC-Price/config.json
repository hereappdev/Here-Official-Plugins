{
    "name": "BTC Price",
    "version": "1.1.6",
    "configURL": "https://raw.githubusercontent.com/hereappdev/Here-Official-Plugins/master/source/BTC-Price/config.json",
    "downloadURL": "https://raw.githubusercontent.com/hereappdev/Here-Official-Plugins/master/downloads/BTC-Price.hereplugin",
    "description": "Show real-time price of BTC and other cryptocurrencies",
    "icon": "icon.png",
    "identifier": "app.here.btcprice",
    "createdBy": "Here",
    "website": "https://here.app",
    "script": "index.js",
    "defaultCategory": "fav",
    "displayOn": ["mini", "menuBar", "dock"],
    "preferences": [
        {
            "title": "Coin Name",
            "type": "text",
            "key": "coinName",
            "default": "BTC Price"
        },
        {
            "title": "Coin Code",
            "type": "text",
            "key": "coinCode",
            "default": "BTC"
        },
        {
            "title": "Currency Unit",
            "type": "text",
            "key": "currencyUnit",
            "default": "CNY"
        }
    ]
}
